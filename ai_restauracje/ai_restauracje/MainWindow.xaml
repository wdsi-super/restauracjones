<Window x:Class="ai_restauracje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-Namespace:ai_restauracje"
        mc:Ignorable="d"
        Title="Znajdź restaurację dla siebie!" Height="450" Width="800">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ComboBox Name="filter" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" 
                      SelectionChanged="filter_SelectionChanged" ItemsSource="{Binding Source={StaticResource locationsEnum}}">
                
            </ComboBox>
        </Grid>
        <Grid Grid.Row="1">
            <ListView ItemsSource="{Binding ElementName=filter, Path=SelectedItem, Converter={StaticResource filterConverter}}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Location" Width="200" DisplayMemberBinding="{Binding Location}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
